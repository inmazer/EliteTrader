<Window x:Class="EliteTrader.VerifyStationNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="Verify station name" Height="96.8" Width="312">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox Text="{Binding Path=StationName}" Grid.Row="0" Grid.Column="0" Margin="5"></TextBox>
        <Button Grid.Row="2" Grid.Column="0" Command="{Binding OkCommand}" Width="50" Margin="5" IsDefault="True" Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
